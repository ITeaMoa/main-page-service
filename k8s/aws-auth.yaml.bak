apiVersion: v1
kind: ConfigMap
metadata:
  name: aws-auth
  namespace: kube-system
data:
  mapRoles: |
    - rolearn: arn:aws:iam::<ACCOUNT_ID>:role/eks-test
      groups:
        - system:bootstrappers
        - system:nodes
    - rolearn: arn:aws:iam::<ACCOUNT_ID>:role/eks-test
      username: eks-admin
      groups:
        - system:masters
  mapUsers: |
    - userarn: arn:aws:iam::<ACCOUNT_ID>:user/DevOps
      username: devops-user
      groups:
        - system:masters
